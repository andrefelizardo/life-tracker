// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  // provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id Int @id @default(autoincrement())
  name String
  qtt Int
  lastIncrementedAt DateTime? @default(now())
  userId Int?
  user User? @relation(fields: [userId], references: [id])
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  displayName String
  profilePicture String?
  habits Habit[]
}