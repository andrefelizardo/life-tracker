generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgres"
  // provider = "sqlite"
}

model Habit {
  id                Int       @id @default(autoincrement())
  name              String
  qtt               Int
  goal              Int       @default(0)
  mode              String    @default("NORMAL") // "NORMAL", "ON", "OFF"
  resetOnFailure    Boolean   @default(false)
  startDate         DateTime? @default(now())
  lastIncrementedAt DateTime? @default(now())
  userId            Int?
  user              User?     @relation(fields: [userId], references: [id])
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  displayName String
  profilePicture String?
  habits Habit[]
}